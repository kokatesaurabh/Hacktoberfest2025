import java.util.Scanner;

/**
 * CalculadoraSalarioDiarioDebora.java
 * Programa simples em Java para calcular o valor total a receber
 * com base no nÃºmero de dias trabalhados e no valor da diÃ¡ria.
 *
 * Feito por DÃ©bora Martins para o Hacktoberfest 2025 ðŸŽƒ
 */
public class CalculadoraSalarioDiarioDebora {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("=== Calculadora de SalÃ¡rio DiÃ¡rio ===");
        System.out.print("Digite o valor da diÃ¡ria (R$): ");
        double diaria = sc.nextDouble();

        System.out.print("Digite o nÃºmero de dias trabalhados: ");
        int dias = sc.nextInt();

        // Calcula o total a receber
        double total = diaria * dias;

        System.out.printf("\nðŸ’¼ VocÃª trabalhou %d dias a R$%.2f por dia.%n", dias, diaria);
        System.out.printf("ðŸ’° Total a receber: R$%.2f%n", total);

        // Dica adicional: se quiser, pode calcular desconto de INSS ou imposto aqui
        System.out.println("\nObrigado por usar a Calculadora de SalÃ¡rio DiÃ¡rio!");
        sc.close();
    }
}
